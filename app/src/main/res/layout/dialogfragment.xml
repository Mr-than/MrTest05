<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round"
    android:orientation="vertical">


    <ImageView
        android:layout_width="304dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/test3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_text1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:counterEnabled="true"

        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_edit1"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:hint="输入账号"
            android:inputType="number"
            android:textSize="20dp"
            app:drawableStartCompat="@drawable/test1"
            app:hintAnimationEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/dialog_edit2"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textSize="20dp"
            app:drawableStartCompat="@drawable/test2"
            app:hintAnimationEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/dialog_edit3"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textSize="20dp"
            app:drawableStartCompat="@drawable/test2"
            app:hintAnimationEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/butt1"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="注册" />


</LinearLayout>